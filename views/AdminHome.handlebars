<div class="container">
<h1 style="font-weight: bold; color: white;">Admin Account Home</h1>
<div class ="divider"></div>
<div class="feature_divider"></div>

<h1 style="font-weight: bold; color: white; font-size:20px;">Admin Requests</h1>
<section class="wrapper" style="border-box:none !important;">
    <!-- Row title -->
    <main class="row-req title-req">
      <ul>
        <li>Name</li>
        <li>Username</li>
        <li></li>
        <li></li>
      </ul>
    </main>

{{#each result}}
<section class="row-fadeIn-wrapper">
     <article class="row-req fadeIn nfl">
       <ul>
         <li>{{name}}</li>


         <li style="margin-right:5px;">{{username}}</li>
            <li><a href="/approveSingleAdmin/{{username}}">Approve</a></li>
         <li><a href="/deleteAdminRequest/{{username}}">Delete</a></li>
       </ul>
       <ul class="more-content">
         <li>{{email}}</li>
       </ul>
     </article>
   </section>
{{/each}}
  </section>
  <div class ="divider"></div>
  <button data-toggle="modal" data-target="#myModal" type="button" class="btn btn-large btn-info">Create Bet</button>
  <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Create Bet</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <div class="modal-body">
                              <form class="needs-validation" action="/AdminSignUp" method="post" novalidate>
                                <div class="form-group">
                                  <label for="ContactName">Team 1</label>
                                  <input type="text" class="form-control" id="Team1" name="Team1" placeholder="Team 1" required>
                                  <div class="invalid-feedback">
                                      Please provide a Team 1.
                                    </div>
                                </div>
                                <div class="form-group">
                                 <label for="ContactEmail">Team 2</label>
                                 <input type="text" class="form-control" id="Team2" name="Team2" placeholder="Team 2" required>
                                 <div class="invalid-feedback">
                                     Please provide a Team 2.
                                   </div>
                               </div>
                               <div class="form-group">
                                <label for="Payout1">Payout 1</label>
                                <input type="text" class="form-control" id="Payout1" name="Payout1" placeholder="Payout 1" required>
                                <div class="invalid-feedback">
                                    Please provide a Payout 1.
                                  </div>
                              </div>
                               <div class="form-group">
                                <label for="Payout2">Payout 2</label>
                                <input type="text" class="form-control" id="Payout2" name="Payout2" placeholder="Payout 2" required>
                                <div class="invalid-feedback">
                                    Please provide a Payout 2.
                                  </div>
                              </div>

                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-secondary" type="submit" class="btn btn-primary">Create</button>
                            </div>
                            </form>
                        </div>

                    </div>
                </div>
</div>
