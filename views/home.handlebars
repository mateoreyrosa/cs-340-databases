<div class="container">
<h1 style="font-weight: bold; color: white;">Home</h1>
<div class ="divider"></div>
<div class="feature_divider"></div>

<h1 style="font-weight: bold; color: white; font-size:20px;">Open Bets</h1>
<section class="wrapper" style="border-box:none !important;">
    <!-- Row title -->
    <main class="row-req title-req">
      <ul>
        <li>Team 1</li>
        <li>Team 2</li>
        <li>Odds 1</li>
        <li>Odds 2</li>
        <li>Payout 1</li>
        <li>Payout 2</li>
        <li></li>
      </ul>
    </main>

{{#each result}}
<section class="row-fadeIn-wrapper">
     <article class="row-req fadeIn nfl">
       <ul>

         <li>{{team1}}</li>
         <li style="margin-right:5px;">{{team2}}</li>
            <li style="margin-right:5px;">{{team1odds}}</li>
               <li style="margin-right:5px;">{{team2odds}}</li>
                  <li style="margin-right:5px;">{{team1payout}}</li>
                    <li style="margin-right:5px;">{{team2payout}}</li>
          <button data-toggle="modal" data-target="#myModal" data-team1="{{team1}}" data-team2="{{team2}}" data-username="{{username}}" data-id="{{betid}}" type="button" class="btn btn-large btn-info open-Place">Place Bet</button>



       </ul>
       <ul class="more-content">
      <li></li>
       </ul>
     </article>
   </section>
{{/each}}
  </section>
  <div class ="divider"></div>
  <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title"></h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <div class="modal-body">
                              <form class="needs-validation" action="/PlaceBet" method="post" novalidate>
                                <input type="number" class="invisible" id="betid" name="betid" value="">
                                  <input type="text" class="invisible" id="username" name="username" value="">

                                <div class="form-group">
                                  <input type="radio" id="radioteam1" name="teamSelect" value=""><div id="radiotext1"></div></input><br>
                                  <input type="radio" id="radioteam2" name="teamSelect" value=""><div id="radiotext2"></div><br>
                                </div>
                                <div class="form-group">
                                  <label for="BetAmount">Bet Amount</label>
                                  <input type="number" class="form-control" id="BetAmount" name="BetAmount" placeholder="BetAmount" required>
                                  <div class="invalid-feedback">
                                      Please provide a Team 1.
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-secondary" type="submit" class="btn btn-primary">Place</button>
                            </div>
                            </form>
                        </div>

                    </div>
                </div>

</div>
<script
  src="https://code.jquery.com/jquery-3.4.1.min.js"
  integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
  crossorigin="anonymous"></script>
<script>
$(document).on("click", ".open-Place", function () {
     var betId = $(this).data('id');
        var username = $(this).data('username');
          var team1 = $(this).data('team1');
            var team2 = $(this).data('team2');
            var title = document.getElementsByClassName('modal-title');
            $('.modal-title').empty();
            $('.modal-title').text("Place bet for " + team1 + " vs. " + team2);
                var radio1 = document.getElementById('radioteam1');
                var radio2 = document.getElementById('radioteam2');
                $('#radiotext1').empty();
                  $('#radiotext2').empty();
                  $('#radiotext1').text(team1);
                    $('#radiotext2').text(team2);

     $(".modal-body #betid").val( betId );
      $(".modal-body #username").val( username );
        $(".modal-body #team1").val( team1 );
          $(".modal-body #team2").val( team2 );
          $(".modal-body #radioteam1").val( team1 );
            $(".modal-body #radioteam2").val( team2 );

});
</script>
<style>
.row-req ul li {

  width: 120px;
}
.container *{
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing:border-box;

}
.wrapper * {
  -webkit-box-sizing: content-box;
     -moz-box-sizing: content-box;
          box-sizing: content-box;
}

body {
  background: rgba(0, 0, 0, 0.9);
}
</style>
